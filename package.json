{
  "name": "json-viewer-component",
  "version": "0.0.1",
  "description": "JSON Viewer - Web Components",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es6.js",
  "types": "types/index.d.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --config ./aux/webpack.config.ts --config-name umd",
    "build": "cross-env NODE_ENV=production webpack build --config ./aux/webpack.config.ts",
    "tsc": "tsc --baseUrl ./ --noEmit -p ./tsconfig.json",
    "lint": "npm run lint:ts && npm run lint:style",
    "lint:ts": "eslint . --ext .ts --ext .js",
    "lint:ts:fix": "npm run lint:ts -- --fix",
    "lint:style": "stylelint **/*.scss",
    "lint:style:fix": "npm run lint:style -- --fix",
    "test": "jest --config=./aux/jest.config.ts",
    "test:update": "npm run test -- --updateSnapshot"
  },
  "keywords": [
    "components",
    "web components",
    "json",
    "viewer"
  ],
  "author": "Alexander Medkov <azeeson@gmail.com> (https://azeeson.com/)",
  "license": "MIT",
  "homepage": "https://github.com/azeeson/json-viewer-component#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azeeson/json-viewer-component.git"
  },
  "bugs": {
    "url": "https://github.com/azeeson/json-viewer-component/issues"
  },
  "devDependencies": {
    "@testing-library/dom": "8.19.0",
    "@types/jest": "29.1.2",
    "@types/node": "18.8.4",
    "@types/webpack": "5.28.0",
    "@types/webpack-dev-server": "4.7.2",
    "cross-env": "7.0.3",
    "css-loader": "6.7.1",
    "css-minimizer-webpack-plugin": "4.2.1",
    "eslint": "8.25.0",
    "eslint-config-vavilon": "0.1.14",
    "html-webpack-plugin": "5.5.0",
    "jest": "29.2.0",
    "jest-environment-jsdom": "29.2.0",
    "sass": "1.55.0",
    "sass-loader": "13.1.0",
    "style-loader": "3.3.1",
    "stylelint": "14.14.0",
    "stylelint-config-standard-scss": "5.0.0",
    "stylelint-order": "5.0.0",
    "ts-jest": "29.0.3",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.11.1"
  }
}
